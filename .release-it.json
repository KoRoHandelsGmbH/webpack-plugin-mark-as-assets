{
    "plugins": {
        "@release-it/keep-a-changelog": {
            "filename": "CHANGELOG.md"
        }
    },
    "git": {
        "changelog": "npx auto-changelog --stdout",
        "requireBranch": "main",
        "commitMessage": "NTR - Release ${version}"
    },
    "github": {
        "release": true,
        "releaseName": "Release v${version}"
    },
    "npm": {
        "publish": true
    }
}